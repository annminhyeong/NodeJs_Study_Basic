<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
        <title>Hello, world!</title>
    </head>
    <body>
        <%- include('nav.html') %>
        <h4 class="container mt-4"><strong>글쓰기</strong></h4>
        <div class="container mt-3">
            <form action="/add" method="post">
                <div class="form-group">
                    <label for="title">오늘의 할일</label>
                    <input type="text" id="title" class="form-control" name="title">
                </div>
                <div class="form-group">
                    <label for="content">세부사항</label>
                    <textarea id="content" class="form-control" name="content" cols="30" rows="10"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-secondary">저장하기</button>
            </form>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>